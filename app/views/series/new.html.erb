<h1>Nuevas Series</h1>

<%= form_with url: series_create_path, model: @serie, method: :post do |form| %>

  <div>
    <%= form.label :name, "Ingresa Tu Serie", class: "form-label" %> <br>
    <%= form.text_field :name %> <br>
  </div>

  <div>
    <%= form.label :synopsis, "Cuentame de tu serie", class: "form-label" %> <br>
    <%= form.text_area :synopsis %> <br>
  </div>

  <div>
    <%= form.label :director, "El Director", class: "form-label" %> <br>
    <%= form.text_field :director %> <br>
    <br>
  </div>

  <div>
    <%= form.submit "Guardar" %>
  </div>

<% end %>

